!!! html
%html
  %head
    %title= @page_title ||= 'page title'
    %meta{"http-equiv" => "Content-Type", :content => "text/html;charset=utf-8"}
    
    / %link{'rel'=>"alternate", 'type'=>"application/atom+xml", 
    /   'title'=>"sousk.net - timeline", 'href'=> timeline_url }
    
    = stylesheet_link_tag "oocss/core/libraries" #, :media => "screen, projection"
    = stylesheet_link_tag "oocss/core/template/template"
    = stylesheet_link_tag "oocss/core/grid/grids"
    = stylesheet_link_tag "content"
    = stylesheet_link_tag "phi"
    = stylesheet_link_tag "themes/bright"
    
  %body
    .page
      .head
        %h1= @page_title ||= 'page title'

      .body
        .main.leftCol
          #messages
            #notice= flash[:notice]
            #error= flash[:error]
            #warn= flash[:warn]
          #contents
            = yield :layout

        .side
          %h2 recent posts
          %ul
            %li foo
            %li foo
            %li foo

      .foot
        footer
