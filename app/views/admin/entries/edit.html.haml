-form_for [:admin, @entry] do |f|
  .entry
    .title
      title
      = f.text_field :title
    .slug
      slug
      = f.text_field :slug    
    .body
      body
      = f.text_area :body
    .property
      published
      = f.check_box :published_at
      = @entry.published_at.to_s
    .submit
      = f.submit
    .attributes
      %ul
        %li 
          = @entry.created_at.to_s(:entry)

.delete
  = button_to "delete", admin_entry_path(@entry), :method => 'delete'